<%- layout("./layout/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-6 offset-3">
            <h2 class="col-6 offset-2">Login</h2>
            <form action="/login" method="post" class="needs-validation"
                novalidate>
                <div class="mb-3">
                    <label for="title" class="form-lable">Username</label>
                    <input type="text" id="username" name="username"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>

                </div>

                <div class="mb-3">
                    <label for="password" class="form-lable">Passward</label>
                    <input type="password" name="password" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Strong Passward!
                    </div>
                </div>
                <button class="btn btn-success">singUp</button>
            </form>
        </div>
    </div>