<%- layout("./layout/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
    <h3>Create a New Listing</h3>
    <form action="/listing" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text"  name="Listing[title]" class="form-control" placeholder="Enter Title" required>
        <div class="valid-feedback">
            Title looks good!
        </div>
    </div>
    <div>
        <label for="description" class="form-lable" class="form-lable">description</label>
        <textarea name="Listing[description]" id=""  class="form-control"  required></textarea>
        <div class="invalid-feedback">please write the description</div>
    </div>
    
        <div>
            <label for="image" class="form-lable" class="form-lable">Upload Listing image </label>
            <input type="file"  name="Listing[image]" class="form-control"  required>
            <div class="invalid-feedback">ok use default url</div>
        </div>
        
        <div class="row">
        <div class="col-md-4">
            <label for="price" class="form-lable" class="form-lable">price</label>
            <input type="number"  name="Listing[price]" class="form-control" placeholder="1200"  required>
            <div class="invalid-feedback">please enter valid price</div>
        </div>
        <div class="col-md-8">
            <label for="country" class="form-lable" class="form-lable">country</label>
            <input type="text"  name="Listing[country]" class="form-control" placeholder="India"  required>
            <div class="invalid-feedback">Enter Country Name</div>
        </div>
    </div>
        <div>
            <label for="location" class="form-lable" class="form-lable">location</label>
            <input type="text" name="Listing[location]" class="form-control" placeholder="Jaipur,Rajasthan"  required>
            <div class="invalid-feedback">Enter Your Location</div>
        </div>
        <br>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</div>
</div>
</body>
</html>