<%- layout("./layout/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Listing Details</h3>
        </div>
        <div class="card col-6 offset-3 show-card ">

            <img src="<%= list.image %>" class="card-img-top show-image"
                alt="...">

            <div class="card-body">
                <h5 class="card-title"><%= list.title %></h5>
                <p class="card-text"><%= list.description %>. <br>
                    &#8377;<%= list.price.toLocaleString("en-IN") %> <br>
                    <%= list.location %> <br>
                    <%= list.country %>

                </p>

            </div>

            <div class="btns">
                <a href="/listing/<%= list._id %>/edit"
                    class="btn btn-dark col-1 offset-0 add-btn">Edit</a>

                <form action="/listing/<%= list.id %>?_method=DELETE"
                    method="POST">
                    <button class="btn btn-dark  offset-4">Delete</button>
                </form>
            </div>
        </div>
    </div>
</body>